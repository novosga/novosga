{% extends "crud/list.html.twig" %}
{% block thead %}
    <th>{% trans %}Nome{% endtrans %}</th>
    <th>{% trans %}Status{% endtrans %}</th>
{% endblock %}
{% block tbody %}
    <td>
        <a href="javascript:void(0)" onclick="SGA.Servicos.subservicos({{ item.id }})">
            {{ item.nome }}
        </a>
        <div id="servico-{{ item.id }}" class="subservicos">
        </div>
    </td>
    <td>
        {% if item.status == 1 %}
        <span class="status-active">{% trans %}Ativo{% endtrans %}</span>
        {% else %}
        <span class="status-inactive">{% trans %}Inativo{% endtrans %}</span>
        {% endif %}
    </td>
{% endblock %}